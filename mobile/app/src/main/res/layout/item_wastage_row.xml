<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvWastedItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wasted Item Name"
        android:textColor="@color/foreground"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvWastedItemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Type: Main Dish"
        android:textColor="@color/muted_text"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvWastedQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quantity: 0.0 unit"
            android:textColor="@color/foreground"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvWastedCo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CO2: 0.0 kg"
            android:textColor="@color/wastage_primary"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Increased margin top from 0dp to 12dp for more breathing room -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="0dp"
        android:background="@color/border_grey" />

</LinearLayout>