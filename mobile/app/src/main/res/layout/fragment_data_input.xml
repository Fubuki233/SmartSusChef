<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="8dp"
    tools:context=".ui.datainput.DataInputFragment">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:checkedButton="@+id/btnSalesTab"
        app:singleSelection="true">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSalesTab"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sales"
            app:cornerRadius="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWastageTab"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wastage"
            app:cornerRadius="8dp"/>
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvStep1Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 1: Select Item"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/wastageTypeToggleGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:checkedButton="@+id/btnIngredientType"
                app:singleSelection="true"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnMainDishType"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Main Dish"
                    android:textSize="11sp"
                    android:paddingHorizontal="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:lines="2"
                    app:cornerRadius="8dp"/>
                <Button
                    android:id="@+id/btnSubRecipeType"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sub-Recipe"
                    android:textSize="11sp"
                    android:paddingHorizontal="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:lines="2"
                    app:cornerRadius="8dp"/>
                <Button
                    android:id="@+id/btnIngredientType"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ingredient"
                    android:textSize="11sp"
                    android:paddingHorizontal="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:lines="2"
                    app:cornerRadius="8dp"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <Spinner
                android:id="@+id/itemSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input_field" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Step 2: Enter Quantity"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etQuantity"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input_field"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:paddingHorizontal="12dp" />

            <Button
                android:id="@+id/btnSaveData"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/primary"
                android:text="Save Entry"
                android:textColor="@android:color/white"
                app:cornerRadius="32dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:text="Recent Entries for Today"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRecentEntries"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="false" />
</LinearLayout>