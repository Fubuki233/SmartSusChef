<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/border_grey"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:paddingHorizontal="8dp">

    <!-- Ingredient column header -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Ingredient (unit)"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/foreground" />

    <!-- Date columns -->
    <LinearLayout
        android:id="@+id/llHeaderDates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/day1Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/foreground" />

        <TextView
            android:id="@+id/day2Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/foreground" />

        <TextView
            android:id="@+id/day3Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/foreground" />

        <TextView
            android:id="@+id/day4Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/foreground" />

        <TextView
            android:id="@+id/day5Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/foreground" />

        <TextView
            android:id="@+id/day6Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/foreground" />

        <TextView
            android:id="@+id/day7Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/foreground" />
    </LinearLayout>
</LinearLayout>