{
    "family": "${ENVIRONMENT}-frontend",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/smartsuschef-${ENVIRONMENT}-ecs-task-execution",
    "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/smartsuschef-${ENVIRONMENT}-ecs-task",
    "containerDefinitions": [
        {
            "name": "smartsuschef-frontend",
            "image": "PLACEHOLDER",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "protocol": "tcp"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/smartsuschef-${ENVIRONMENT}-frontend",
                    "awslogs-region": "${AWS_REGION}",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:80 || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 30
            }
        }
    ]
}