{
    "family": "${ENVIRONMENT}-backend",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/smartsuschef-${ENVIRONMENT}-ecs-task-execution",
    "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/smartsuschef-${ENVIRONMENT}-ecs-task",
    "containerDefinitions": [
        {
            "name": "smartsuschef-backend",
            "image": "PLACEHOLDER",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "ASPNETCORE_ENVIRONMENT",
                    "value": "Production"
                },
                {
                    "name": "ConnectionStrings__DefaultConnection",
                    "value": "Server=${RDS_ENDPOINT};Database=smartsuschef;User=smartsuschef;Password=${DB_PASSWORD};"
                },
                {
                    "name": "Jwt__Secret",
                    "value": "${JWT_SECRET}"
                },
                {
                    "name": "ExternalApis__MlApiUrl",
                    "value": "http://${ENVIRONMENT}-ml.smartsuschef.local:8000"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/smartsuschef-${ENVIRONMENT}-backend",
                    "awslogs-region": "${AWS_REGION}",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:8080/health || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 60
            }
        }
    ]
}