{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "Network",
            "Effect": "Allow",
            "Action": [
                "ec2:*Vpc*",
                "ec2:*Subnet*",
                "ec2:*InternetGateway*",
                "ec2:*NatGateway*",
                "ec2:*Address*",
                "ec2:*RouteTable*",
                "ec2:*Route",
                "ec2:*SecurityGroup*",
                "ec2:*NetworkAcl*",
                "ec2:*Tags",
                "ec2:Describe*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "RDS",
            "Effect": "Allow",
            "Action": [
                "rds:*DBInstance*",
                "rds:*DBSubnetGroup*",
                "rds:AddTagsToResource",
                "rds:ListTagsForResource",
                "rds:RemoveTagsFromResource"
            ],
            "Resource": "*"
        },
        {
            "Sid": "Containers",
            "Effect": "Allow",
            "Action": [
                "ecr:*",
                "ecs:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "ALB",
            "Effect": "Allow",
            "Action": [
                "elasticloadbalancing:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "IAM",
            "Effect": "Allow",
            "Action": [
                "iam:*Role*",
                "iam:PassRole"
            ],
            "Resource": "arn:aws:iam::730878889035:role/smartsuschef-*"
        },
        {
            "Sid": "ACMLogsSD",
            "Effect": "Allow",
            "Action": [
                "acm:*",
                "logs:*",
                "servicediscovery:*",
                "route53:*HostedZone*",
                "route53:*ResourceRecordSets",
                "route53:GetChange"
            ],
            "Resource": "*"
        },
        {
            "Sid": "STS",
            "Effect": "Allow",
            "Action": [
                "sts:GetCallerIdentity"
            ],
            "Resource": "*"
        }
    ]
}